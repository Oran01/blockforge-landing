---
/**
 * Textarea.astro
 *
 * A stylized textarea component with a cut-corner outline and decorative SVG accent.
 * Used for larger text inputs such as contact forms, feedback, or messaging.
 *
 * @component
 * @prop {string} name - Name attribute used in form submission.
 * @prop {string} id - ID attribute for labeling and accessibility.
 * @prop {string} [class] - Optional Tailwind classes for styling or layout.
 *
 * @example
 * <Textarea name="message" id="user-message" />
 */

 import { twMerge } from "tailwind-merge";

const { name, id, class: className } = Astro.props;
---

<!-- Wrapper with masked outline and dynamic focus styling -->
<div class={twMerge("relative group z-0 flex", className)}>

  <!-- Cut-corner outline using mask + focus border transition -->
    <div class="absolute inset-0 outline outline-2 -outline-offset-2 outline-zinc-700 [mask-image:linear-gradient(225deg,transparent,transparent_10px,black_10px)] group-focus-within:outline-fuchsia-500 -z-10"></div>
    
    <!-- Decorative SVG corner element, color shifts on focus -->
    <svg
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="absolute top-0 right-0  text-zinc-700 -z-10 group-focus-within:text-fuchsia-500"
  >
    <path
      d="M0 1H12.2667L23 11.7333V24"
      stroke="currentColor"
      stroke-width="2"
    ></path>
  </svg>

    <!-- The actual textarea field -->
    <textarea  name={name} id={id}  class="bg-transparent w-full outline-none px-4 py-3 min-h-32"/>
</div>