---
/**
 * Input.astro
 *
 * A stylized input field component with a masked border and animated SVG accent.
 * Tailored for form sections needing strong visual hierarchy.
 *
 * @component
 * @prop {string} name - The name attribute of the input (used in form data).
 * @prop {string} id - The id of the input (for accessibility/labeling).
 * @prop {string} type - Input type (e.g., text, email, password).
 * @prop {string} [class] - Optional additional classes to extend layout/styling.
 */

import { twMerge } from "tailwind-merge"

const {name, id, type, class: className} = Astro.props
---

<!-- Input wrapper with glowing focus border and SVG corner accent -->
<div class={twMerge("relative group z-0",className)}>

  <!-- Glowing outline layer with cut-corner mask and focus transition -->
    <div class="absolute inset-0 outline outline-2 -outline-offset-2 outline-zinc-700 [mask-image:linear-gradient(225deg,transparent,transparent_10px,black_10px)] group-focus-within:outline-fuchsia-500 -z-10"></div>
   
   <!-- Top-right SVG decorative accent that glows on focus -->
    <svg
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="absolute top-0 right-0  text-zinc-700 -z-10 group-focus-within:text-fuchsia-500"
  >
    <path
      d="M0 1H12.2667L23 11.7333V24"
      stroke="currentColor"
      stroke-width="2"
    ></path>
  </svg>

    <!-- Main input field with transparent background and padding -->
    <input type={type} name={name} id={id}  class="bg-transparent h-12 w-full outline-none px-4"/>
</div>